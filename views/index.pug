html 
    head
        meta(charset="utf-8")
        title Chat
        style. 
            html{
                overflow-y: scroll; 
            }
            .message-input{
                position: fixed; 
                bottom: 0; 
                width: 100%; 
            }
            #username-input{
                width: 15%
            }
            #message-box{
                width: 75%; 
            }
            #submit-button{
                width: 10%; 
            }
            /* Chat containers */
            .container {
                border: 2px solid #dedede;
                background-color: #f1f1f1;
                border-radius: 5px;
                padding: 10px;
                margin: 10px 0;
            }

            /* Darker chat container */
            .darker {
                border-color: #ccc;
                background-color: #ddd;
            }

            /* Clear floats */
            .container::after {
                content: "";
                clear: both;
                display: table;
            }

            /* Style images */
            .container img {
                float: left;
                max-width: 60px;
                width: 100%;
                margin-right: 20px;
                border-radius: 50%;
            }

            /* Style the right image */
            .container img.right {
                float: right;
                margin-left: 20px;
                margin-right:0;
            }

            /* Style time text */
            .time-right {
                float: right;
                color: #aaa;
            }

            /* Style time text */
            .time-left {
                float: left;
                color: #999;
            }  
    body
        div(id="message-wrapper")

        div(class="message-input")
            textarea(id="username-input",placeholder="username")
            textarea(id="message-box",placeholder="message")
            button(id="submit-button") Submit
        script(src="/js/socket.io.js")
        script(src="/js/index.js")